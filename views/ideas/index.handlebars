{{#each ideas}}

<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a class="btn btn-dark btn-block" href="/ideas/edit/{{_id}}?_method=PUT">Edit</a>
    <form action="/ideas/{{_id}}?_method=DELETE" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="delete">
    </form>
</div>
{{else}}
<p>No video ideas listed</p>
{{/each}}